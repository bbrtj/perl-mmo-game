% layout 'default';
% title _t 'signing_in';

<h1>
	%= _t 'signing_in'
</h1>

<p><%= link_to _t('navigation.back') => url_for '/' %></p>

% my $form_errors = $form->diva->form_errors;

<form method='POST' action=''>
	<div class="row g-3">

		% for my $field ($form->diva->generate->@*) {
			%== $field->{label}
			<div class="col-sm-12">
				%== $field->{input}
			</div>
			% if ($field->{errors}) {
				<div id="login-feedback" class="form-feedback">
					%== $field->{errors}
				</div>
			% }
		% }

		% if ($form_errors) {
			<div id="login-general-feedback" class="col-sm-12 form-feedback">
				%== $form_errors
			</div>
		% }

		<div class="col-sm-12">
			<input class="form-control" type="submit" value="<%= _t('navigation.send') %>">
		</div>
	</div>
</form>
