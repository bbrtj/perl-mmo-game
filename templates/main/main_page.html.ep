% layout 'default';
% title 'Game project #1';
<div>
	% if ($user) {
		<p><%= link_to 'Play' => url_for 'game' %></p>
		<p><%= link_to 'Logout' => url_for 'user/logout' %></p>
	% }
	% else {
		<p><%= link_to 'Login' => url_for 'user/login' %></p>
		<p><%= link_to 'Register' => url_for 'user/register' %></p>
	% }
</div>
