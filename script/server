#!/usr/bin/env perl

use lib 'local/lib/perl5';
use lib 'lib-base';
use lib 'lib';

use Utils;
use Getopt::Long;

use header;

my $processes = 2;

GetOptions(
	'processes|p=i', \$processes,
);

DI->get('log')->filename('logs/server.log');

Utils->bootstrap_lore;
Utils->bootstrap_mojo;

my $server = DI->get('server');
$server->start_listening($processes);

