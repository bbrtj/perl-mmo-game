#!/usr/bin/env perl

use strict;
use warnings;
use lib 'lib';

use Utils;
use Server::Worker;
use DI;
use Getopt::Long;

my $processes = 4;

GetOptions(
	'processes|p=i', \$processes,
);

DI->get('log')->filename('logs/worker.log');
Utils->bootstrap_models;

my $worker = DI->get('worker');
$worker->start($processes);
